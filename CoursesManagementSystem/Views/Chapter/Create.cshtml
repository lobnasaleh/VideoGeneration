@model ChapterVM


@{
    ViewData["Title"] = "Add A Chapter";
}

@{
    SelectList ChapterOptions = new SelectList(ViewBag.Course, "ID", "Name");
   
}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-primary mb-4">
            <i class="bi bi-plus-circle-dotted"></i> Create a New Chapter
        </h3>

        <form asp-controller="Chapter" asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-8">
                    <!-- Chapter Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Chapter name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- Chapter Details -->
                    <div class="mb-3">
                        <label asp-for="Details" class="form-label fw-bold"></label>
                        <textarea class="form-control" asp-for="Details" placeholder="Enter Chapter Details" rows="4"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>

          

                    <!-- Course Chapter -->
                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label fw-bold"></label>
                        <select asp-for="CourseId" asp-items="ChapterOptions" class="form-control">
                            <option disabled selected>--Select Course--</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <!-- Chapter Order -->
                    <div class="mb-3">
                        <label asp-for="Sort" class="form-label fw-bold"></label>
                        <input class="form-control" asp-for="Sort" placeholder="Enter Chapter Order">
                        <span asp-validation-for="Sort" class="text-danger"></span>
                    </div>


                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-secondary" asp-controller="Chapter" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}