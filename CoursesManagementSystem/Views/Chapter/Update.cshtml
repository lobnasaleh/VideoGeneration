@model ChapterVM

@{
    ViewData["Title"] = "Edit Chapter";
}
@{
    SelectList CategoryOptions = new SelectList(ViewBag.Course, "ID", "Name");
 
}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-warning mb-4">
            <i class="bi bi-pencil-square"></i> Update Chapter
        </h3>

        <form asp-controller="Chapter" asp-action="Update" method="post">
            <div class="row">
                <div class="col-md-8">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Chapter Name</label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- Chapter Details -->
                    <div class="mb-3">
                        <label asp-for="Details" class="form-label fw-bold"></label>
                        <textarea class="form-control" asp-for="Details" placeholder="Enter Chapter Details" rows="4"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>

                    <!-- Chapter of course -->
                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label fw-bold"></label>
                        <select asp-for="CourseId" asp-items="CategoryOptions" class="form-control">
                            <option disabled selected>--Select The Course--</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                   
                    <!-- Chapter Order -->
                    <div class="mb-3">
                        <label asp-for="Sort" class="form-label fw-bold"></label>
                        <input class="form-control" asp-for="Sort" placeholder="Enter Chapter Order">
                        <span asp-validation-for="Sort" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
