
@model List<GeneratedCourseVM>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edrak</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.replit.com/agent/bootstrap-agent-dark-theme.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Custom CSS -->
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/styleAdmin.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>

    <!-- Hero Section -->
    <!-- Hero Section -->
    <section class="py-5 bg-light text-center text-md-start">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">
                        Generate Smart Courses with AI
                    </h1>
                    <p class="lead my-4">
                        Turn any textbook into video lessons, summaries, and quizzes in minutes using cutting-edge AI.
                    </p>
                    <a href="#" class="btn btn-primary btn-lg me-2">
                        Get Started Now
                    </a>
                    <a href="#featured-courses" class="btn btn-outline-secondary btn-lg">
                        Explore Courses
                    </a>
                </div>
                <div class="col-md-6 text-center">
                    <img src="~/images/imdb.png" alt="AI Course Illustration" class="img-fluid" style="max-height: 300px;">
                </div>
            </div>
        </div>
    </section>


    <!-- Featured Courses Section -->
    <section class="py-5" id="featured-courses">
        <div class="container">
            <div class="row mb-4">
                <div class="col-lg-8">
                    <h2 class="fw-bold">Featured Courses</h2>
                    <p class="text-muted">Expand your knowledge with our top-rated courses</p>
                </div>
                <div class="col-lg-4 d-flex justify-content-lg-end align-items-center">
                    <a href="#" class="btn btn-outline-primary">View All Courses</a>
                </div>
            </div>

            <div class="row g-4">
                <!-- Course Card 1 -->
                @foreach (var course in Model)
                {
                    <div class="col-md-4">
                        <div class="card course-card border-primary h-100">
                            <img src="@course.CourseImage" class="card-img-top course-image" alt="@course.Name">
                            <div class="card-body">
                                <h5 class="card-title text-black">@course.Name</h5>
                                <p class="card-text text-muted">@course.Details</p>
                            </div>
                            <div class="card-footer bg-white border-primary d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-primary me-2">@course.LevelName</span>
                                    <span class="badge bg-secondary">@course.ChaptersCount Chapters</span>
                                </div>
                                <a asp-action="getGeneratedCourseById" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-outline-primary btn-sm">View Course</a>
                            </div>
                        </div>
                    </div>
                }
           

            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Why Choose Our AI-Powered Platform</h2>
                <p class="text-muted">Leverage smart technology for a personalized and efficient learning experience</p>
            </div>

            <div class="row g-4">
                <!-- Feature 1 -->
                <div class="col-md-4">
                    <div class="card border-0  h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-box mb-3">
                                <i class="fas fa-robot text-primary fa-3x"></i>
                            </div>
                            <h4 class="card-title text-primary">AI-Generated Courses</h4>
                            <p class="card-text text-primary">Automatically generate course content from textbooks or URLs using advanced AI models..</p>
                        </div>
                    </div>
                </div>

                <!-- Feature 2 -->
                <div class="col-md-4">
                    <div class="card border-0  h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-box mb-3">
                                <i class="fas fa-book-open text-primary fa-3x"></i>
                            </div>
                            <h4 class="card-title text-primary">Summaries & Quizzes</h4>
                            <p class="card-text text-primary"> Each lesson comes with generated summaries and questions to reinforce understanding.</p>
                        </div>
                    </div>
                </div>

                <!-- Feature 3 -->
                <div class="col-md-4">
                    <div class="card border-0  h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="icon-box mb-3">
                                <i class="fas fa-video text-primary fa-3x"></i>
                            </div>
                            <h4 class="card-title text-primary">AI Video Lessons</h4>
                            <p class="card-text text-primary">Watch AI-generated explainer videos tailored for each chapter and topic.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
