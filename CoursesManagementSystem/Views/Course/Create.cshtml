@model CourseVM


@{
    ViewData["Title"] = "Add A Course";
}

@{
    SelectList CategoryOptions = new SelectList(Model.Categories, "ID", "Name");
    SelectList LevelOptions = new SelectList(Model.Levels, "ID", "Name");
}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-primary mb-4">
            <i class="bi bi-plus-circle-dotted"></i> Create a New Course
        </h3>

        <form asp-controller="Course" asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-md-8">
                    <!-- Course Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Course name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- Course Details -->
                    <div class="mb-3">
                        <label asp-for="Details" class="form-label fw-bold"></label>
                        <textarea class="form-control" asp-for="Details" placeholder="Enter Course Details" rows="4"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>

                    <!-- Course Category -->
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold"></label>
                        <select asp-for="CategoryId" asp-items="CategoryOptions" class="form-control">
                            <option disabled selected>--Select Course Category--</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Course Level -->
                    <div class="mb-3">
                        <label asp-for="LevelId" class="form-label fw-bold"></label>
                        <select asp-for="LevelId" asp-items="LevelOptions" class="form-control">
                            <option disabled selected>--Select Course Level--</option>
                        </select>
                        <span asp-validation-for="LevelId" class="text-danger"></span>
                    </div>

                    <!-- Book Storage url -->
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="Book">Upload Book (PDF):</label>
                        <input class="form-control" type="file" asp-for="Book" placeholder="Enter Book URL" />
                        <span asp-validation-for="Book" class="text-danger"></span>
                    </div>

                    <!-- Image Storage url -->
                    <div class="mb-3">
                        <label class="form-label fw-bold" asp-for="CourseImage">Upload Course Image:</label>
                        <input class="form-control" type="file" asp-for="CourseImage" placeholder="Enter Course Image" />
                        <span asp-validation-for="CourseImage" class="text-danger"></span>
                    </div>


                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a class="btn btn-secondary" asp-controller="Course" asp-action="Index">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}