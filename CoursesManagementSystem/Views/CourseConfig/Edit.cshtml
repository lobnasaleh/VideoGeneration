@using CoursesManagementSystem.Enums
@model CoursesManagementSystem.DB.Models.CourseConfig

@{
    ViewData["Title"] = "Edit Course Configuration";
}

<h3 class="text-primary mb-4"><i class="bi bi-pencil-square"></i> Edit Course Configuration</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label asp-for="ChaptersCount" class="form-label fw-bold">Chapters Count</label>
        <input type="number" class="form-control" asp-for="ChaptersCount">
        <span asp-validation-for="ChaptersCount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LessonsCountPerChapter" class="form-label fw-bold">Lessons Count Per Chapter</label>
        <input type="number" class="form-control" asp-for="LessonsCountPerChapter">
        <span asp-validation-for="LessonsCountPerChapter" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VideoDurationInMin" class="form-label fw-bold">Video Duration (min)</label>
        <input type="number" class="form-control" asp-for="VideoDurationInMin">
        <span asp-validation-for="VideoDurationInMin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Language" class="form-label fw-bold">Language</label>
        <select asp-for="Language" asp-items="@Html.GetEnumSelectList<VideoPresenterLanguageEnum>()" class="form-control"></select>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Persona" class="form-label fw-bold">Persona</label>
        <select asp-for="Persona" asp-items="@Html.GetEnumSelectList<VideoPresenterPersonaEnum>()" class="form-control"></select>
        <span asp-validation-for="Persona" class="text-danger"></span>
    </div>

    <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />

    <div class="d-flex justify-content-between mt-4">
        <a class="btn btn-secondary" asp-controller="CourseConfig" asp-action="CourseConfigByCourseId" asp-route-Courseid="@ViewBag.CourseId">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
