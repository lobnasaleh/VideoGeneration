@model CoursesManagementSystem.DB.Models.CourseConfig

<h3>Are you sure you want to delete this Question Level?</h3>
<p><strong>Chapters Count:</strong> @Model.ChaptersCount</p>
<p><strong>Lessons Per Chapter:</strong> @Model.LessonsCountPerChapter</p>
<p><strong>Video Duration:</strong> @Model.VideoDurationInMin</p>
<p><strong>Language:</strong> @Model.Language</p>
<p><strong>Persona:</strong> @Model.Persona</p>
<p><strong>Course Name:</strong> @Model.Course.Name</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ID" method="post">
    <button type="submit" class="btn btn-danger">Confirm Delete</button>

    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>
