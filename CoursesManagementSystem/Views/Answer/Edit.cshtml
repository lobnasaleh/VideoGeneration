@model CoursesManagementSystem.DB.Models.Answer

@{
    ViewData["Title"] = "Edit Answer";
}

<h3 class="text-primary mb-4">
    <i class="bi bi-pencil-square"></i> Edit Answer
</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <!-- Answer Text -->
    <div class="mb-3">
        <label asp-for="AnswerText" class="form-label fw-bold">Answer Text</label>
        <textarea class="form-control" asp-for="AnswerText" rows="3"></textarea>
        <span asp-validation-for="AnswerText" class="text-danger"></span>
    </div>

    <!-- Is Correct Checkbox -->
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsCorrect">
        <label class="form-check-label fw-bold" asp-for="IsCorrect">Is Correct?</label>
    </div>

    <!-- Question Dropdown -->
    <div class="mb-3">
        <label asp-for="QuestionId" class="form-label fw-bold">Select Question</label>
        <select asp-for="QuestionId" asp-items="ViewBag.Questions" class="form-control" required>
            <option value="">-- Select a Question --</option>
        </select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <a class="btn btn-secondary" asp-action="GetAll">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
