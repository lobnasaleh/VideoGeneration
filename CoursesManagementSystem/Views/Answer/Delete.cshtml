@model CoursesManagementSystem.DB.Models.Answer

@{
    ViewData["Title"] = "Delete Answer";
}

<h3 class="text-danger mb-4">
    <i class="bi bi-trash"></i> Are you sure you want to delete this Answer?
</h3>

<p><strong>Answer Text:</strong> @Model.AnswerText</p>
<p><strong>Question:</strong> @Model.Question.QuestionText</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.ID" method="post">
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
</form>
