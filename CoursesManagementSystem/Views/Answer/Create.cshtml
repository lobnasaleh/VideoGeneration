@model CoursesManagementSystem.DB.Models.Answer

@{
    ViewData["Title"] = "Add Answer";
}

<h3 class="text-primary mb-4 text-start">
    <i class="bi bi-plus-circle-dotted"></i> Create a New Answer
</h3>

<form asp-controller="Answer" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-8">
            <!-- Answer Text -->
            <div class="mb-3">
                <label asp-for="AnswerText" class="form-label fw-bold">Answer Text</label>
                <textarea class="form-control" asp-for="AnswerText" placeholder="Enter answer text"></textarea>
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>

            <!-- Is Correct Checkbox -->
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsCorrect">
                <label class="form-check-label fw-bold" asp-for="IsCorrect">Is Correct?</label>
            </div>

            <!-- Question Dropdown -->
            <div class="mb-3">
                <label asp-for="QuestionId" class="form-label fw-bold">Select Question</label>
                <select asp-for="QuestionId" asp-items="ViewBag.Questions" class="form-control">
                    <option value="">Select a Question</option>
                </select>
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-secondary" asp-action="GetAll">Cancel</a>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</form>
