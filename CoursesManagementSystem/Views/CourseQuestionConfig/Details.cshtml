@model CoursesManagementSystem.DB.Models.CourseQuestionConfig

@{
    ViewData["Title"] = "Course Question Config Details";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header">
            Course Question Configuration Details
        </div>
        <div class="card-body">
            <p class="card-title"><strong>Questions Per Lesson:</strong> @Model.QuestionsCountPerLesson</p>
            <p class="card-title"><strong>Course Name:</strong> @Model.Course.Name</p>
            <p class="card-title"><strong>Question Level:</strong> @Model.QuestionLevel.Name</p>
            <p class="card-title"><strong>Created By:</strong> @Model.CreatedBy</p>
            <p class="card-title"><strong>Created At:</strong> @Model.CreatedAt.ToString("t")</p>
            <p class="card-title"><strong>Last Modified At:</strong> @Model.LastModifiedAt</p>
            <p class="card-title"><strong>Last Modified By:</strong> @Model.LastModifiedBy</p>
            <div class="d-flex justify-content-center">
                <a asp-action="Edit" asp-controller="CourseQuestionConfig" asp-route-id="@Model.ID" class="btn btn-primary mx-2">
                    Update Question Config
                </a>
                <a asp-action="Delete" asp-controller="CourseQuestionConfig" asp-route-id="@Model.ID" class="btn btn-danger">
                    Delete Question Config
                </a>
            </div>
        </div>
    </div>
</div>
